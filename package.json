        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "dotenv": "^16.4.4",
        "envalid": "^8.0.0",
        "express": "^4.18.2",
        "reflect-metadata": "^0.2.1"
